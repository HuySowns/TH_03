@model TH_03.Models.Product
@{
    ViewData["Title"] = @Model.Name;
}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Product Image" class="img-fluid img-thumbnail" />
            }
        </div>
        <div class="col-md-6">
            <h2 class="text-primary">@Model.Name</h2>
            <h3 class="text-success">Price: @Model.Price.ToString("C")</h3>
            <p>@Model.Description</p>
            <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
        </div>
    </div>
</div>
