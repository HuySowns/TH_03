@model IEnumerable<TH_03.Models.Product>
@{
    ViewData["Title"] = "Products";
}
<h2 class="text-center my-4">Products</h2>
<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-success">@product.Price.ToString("C")</p>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text"><small class="text-muted">@product.Category?.Name</small></p>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Display" asp-route-id="@product.Id" class="btn btn-primary">View</a>
                        <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-secondary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
