@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <img src="~/images/banner.jpg" alt="Banner" class="img-fluid" />
    <h1 class="display-4">Welcome to Our Store</h1>
    <p>Explore our wide range of products.</p>
</div>
<div class="container mt-4">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text"><strong>Price: </strong>@product.Price.ToString("C")</p>
                        <a href="@Url.Action("Display", "Product", new { id = product.Id })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
